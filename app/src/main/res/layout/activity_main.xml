<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/caption_text" />

        <TextView
            android:id="@+id/coeffALabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coeff_a_text" />

        <EditText
            android:id="@+id/coeffA"
            android:layout_width="match_parent"
            android:inputType="numberDecimal|numberSigned"
            android:layout_height="wrap_content"
            android:imeOptions="normal"
            android:importantForAutofill="no"
            />

        <TextView
            android:id="@+id/coeffBLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coeff_b_text" />

        <EditText
            android:id="@+id/coeffB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"/>

        <TextView
            android:id="@+id/coeffCLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coeff_c_text" />

        <EditText
            android:id="@+id/coeffC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"/>

        <Button
            android:id="@+id/getSolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_solution_text"/>

        <TextView
            android:id="@+id/solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>